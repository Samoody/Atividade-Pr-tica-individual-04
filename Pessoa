import java.util.Scanner;

public class Pessoa {
    public static void main(String[] args) {
        // Criando o scanner para ler a entrada do usuário
        Scanner scanner = new Scanner(System.in);
        
        // Solicita o nome da pessoa
        System.out.print("Digite o seu nome: ");
        String nome = scanner.nextLine();  // Lê o nome da pessoa
        
        // Solicita a idade da pessoa
        System.out.print("Digite a sua idade: ");
        int idade = scanner.nextInt();  // Lê a idade da pessoa
        
        // Exibe a mensagem com o nome e a idade
        System.out.println("Olá, " + nome + "! Você tem " + idade + " anos.");
        
        // Fecha o scanner
        scanner.close();
    }
}
