import java.util.Scanner;

public class AreaTrapezio {
    public static void main(String[] args) {
        // Criando o scanner para ler os dados do usuário
        Scanner scanner = new Scanner(System.in);
        
        // Solicita a base maior
        System.out.print("Digite o valor da base maior: ");
        double baseMaior = scanner.nextDouble();
        
        // Solicita a base menor
        System.out.print("Digite o valor da base menor: ");
        double baseMenor = scanner.nextDouble();
        
        // Solicita a altura
        System.out.print("Digite o valor da altura: ");
        double altura = scanner.nextDouble();
        
        // Calcula a área do trapézio
        double area = ((baseMaior + baseMenor) * altura) / 2;
        
        // Exibe o valor da área
        System.out.printf("A área do trapézio é: %.2f\n", area);
        
        // Fecha o scanner
        scanner.close();
    }
}
