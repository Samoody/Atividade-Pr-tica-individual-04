public class CaixaMensagem {
    public static void main(String[] args) {
        // A mensagem que ser√° exibida dentro da caixa
        String mensagem = "#somostodosnewtonwayden";
        
        // Calcula a largura da caixa com base no tamanho da mensagem
        int largura = mensagem.length() + 2;

        // Imprime a linha superior da caixa
        for (int i = 0; i < largura; i++) {
            System.out.print("*");
        }
        System.out.println();

        // Imprime a mensagem dentro da caixa
        System.out.println("*" + mensagem + "*");

        // Imprime a linha inferior da caixa
        for (int i = 0; i < largura; i++) {
            System.out.print("*");
        }
        System.out.println();
    }
}
